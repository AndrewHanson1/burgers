
<h2>Burgers That I Should Eat</h2>

<ul>
  {{#each burger}}

  {{#unless devoured}}
  <p>{{burger_name}} <button id="{{burger_name}}" class="change-devour" type="submit">Eat</button> </p>

  {{/unless}}

  {{/each}}
</ul>

<p>---------------------------------------------------------------------------------</p>

<h2>Burgers that I ate</h2>

<ul>
  {{#each burger}}
  {{#if devoured}}
  <p>{{burger_name}}</p>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>